{
  "manifest_version": 3,
  "name": "Jarvis - Voice-Controlled Browser Automation",
  "version": "1.0.0",
  "description": "An open-source Chrome extension inspired by ChromePilot for voice-controlled, AI-powered browser automation using Web Speech API",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://www.googleapis.com/*",
    "https://mail.google.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
